{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "noEmitOnError": false,
    "types": ["node"]
  },
  "include": [
    "server/_core/index.ts",
    "server/_core/context.ts",
    "server/_core/env.ts",
    "server/_core/llm.ts",
    "server/db.ts",
    "server/openphone.ts",
    "server/sync.ts",
    "server/analysis.ts",
    "server/qa-criteria-inbound.ts",
    "server/qa-criteria-outbound.ts",
    "server/routers.ts",
    "server/webhooks/**/*",
    "server/utils/bulk-fetch-calls-by-user.ts",
    "server/utils/extract-participants-from-csv.ts",
    "server/utils/export.ts",
    "server/utils/outbound-analytics.ts",
    "server/utils/training-manual-generator.ts",
    "server/utils/check-mysql.ts",
    "server/utils/ngrok-setup.ts",
    "server/utils/register-webhooks.ts",
    "server/utils/list-webhooks.ts",
    "server/utils/delete-webhook.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "server/_core/dataApi.ts",
    "server/_core/imageGeneration.ts",
    "server/_core/voiceTranscription.ts",
    "server/_core/sdk.ts",
    "server/_core/map.ts",
    "server/_core/notification.ts",
    "server/_core/systemRouter.ts",
    "server/_core/vite.ts",
    "server/storage.ts",
    "server/scheduler.ts",
    "server/utils/import-from-csv.ts",
    "server/utils/import-from-csv-cli.ts",
    "server/utils/historical-import.ts",
    "server/utils/historical-import-cli.ts",
    "server/utils/bulk-import-cli.ts",
    "vite.config.ts"
  ]
}
