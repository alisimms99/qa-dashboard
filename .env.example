# Database Configuration
# MySQL connection string (format: mysql://user:password@host:port/database)
DATABASE_URL=mysql://user:password@localhost:3306/qa_dashboard

# OpenPhone API Configuration
# Get your API key from: https://app.openphone.com/settings/api
OPENPHONE_API_KEY=your_openphone_api_key_here

# OpenPhone Phone Number IDs
# Main line (incoming calls): (412) 573-9101
OPENPHONE_MAIN_PHONE_NUMBER_ID=PNVbbBqeqM

# Outbound line (outgoing calls): (412) 772-4291
OPENPHONE_OUTBOUND_PHONE_NUMBER_ID=PNBANAZERt

# For scheduled syncs (uses main phone number)
OPENPHONE_PHONE_NUMBER_ID=PNVbbBqeqM

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Firebase Authentication
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=ojpm-qa-dashboard.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=ojpm-qa-dashboard
VITE_FIREBASE_STORAGE_BUCKET=ojpm-qa-dashboard.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side)
# Option 1: Service account JSON (base64 encoded or JSON string)
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"ojpm-qa-dashboard",...}
# Option 2: Use default credentials in Cloud Run (no env var needed)
